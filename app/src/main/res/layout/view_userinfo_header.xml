<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="14dp">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_avatar" />

    <ImageView
        android:id="@+id/iv_avatar_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_avatar"
        android:layout_alignLeft="@+id/iv_avatar"
        android:layout_alignRight="@+id/iv_avatar"
        android:layout_alignTop="@+id/iv_avatar"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_avatar_none" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:maxLines="2"
        android:text="Canglangweiwei"
        android:textColor="@color/text_common_gray_deep"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ly_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_sex" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="CODE:123456"
            android:textColor="@color/text_common_gray_deep"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/person_main_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="青岛"
            android:textColor="@color/text_common_gray_deep"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ly_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_info"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_follow_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_follow"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:text="10"
            android:textColor="@color/text_common_gray_deep"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toLeftOf="@+id/ic_spit_left"
            android:paddingBottom="8dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:text="关注"
            android:textColor="@color/text_common_gray_light"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ic_spit_left"
            android:layout_width="0.3dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_follow"
            android:layout_alignTop="@+id/tv_follow"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ly_fans_action"
            android:background="@color/main_common_gray" />

        <LinearLayout
            android:id="@+id/ly_fans_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/tv_fans_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="10"
                android:textColor="@color/text_common_gray_deep"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="粉丝"
                android:textColor="@color/text_common_gray_light"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/ic_spit_right"
            android:layout_width="0.3dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_follow"
            android:layout_alignTop="@+id/tv_follow"
            android:layout_toRightOf="@+id/ly_fans_action"
            android:background="@color/main_common_gray" />

        <TextView
            android:id="@+id/tv_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ic_spit_right"
            android:drawableLeft="@drawable/icon_collect"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:text="收藏"
            android:textColor="@color/text_common_gray_deep"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_action"
        android:layout_centerHorizontal="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="https://github.com/Canglangweiwei/ScrollableLayout"
        android:textColor="@color/text_common_gray"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_avatar"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_avatar"
        android:layout_marginRight="14dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_user_editprofile" />
</RelativeLayout>